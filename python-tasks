correctAnswers = []
correctCount = 0
answers = ["Eight", "Woody", "Green", "A nail", "The zoo", "Pinocchio", "Tinkerbell", "Ice", "White", "The White House"]
yourAnswers = []
allQuestions = [
    "How many legs does a spider have?", 
    "What is the name of the toy cowboy in Toy Story?", 
    "What is the color of an emerald?", 
    "What is something you hit with a hammer?",
    "What's the name of a place you go to see lots of animals?",
    "Whose nose grew longer every time he lied?",
    "What is the name of the fairy in Peter Pan?",
    "If you freeze water, what do you get?",
    "What colors are the stars on the American flag?",
    "Where does the President of the United States live while in office?"
    ]

for i, row in enumerate(allQuestions):
  print(row)
  reply1 = input("Your answer: ")
  yourAnswers.append(reply1)
  correctAnswers.append(True if answers[i].lower() == reply1.lower() else False)
  correctCount += 1 if answers[i].lower() == reply1.lower() else 0

print("You have", correctCount, "out of 10 correct answers.", end = " ")
print("Congratulations!" if correctCount > 7 else "Unfortunately you failed the quiz", end = "\n\n")

for i in range(len(correctAnswers)):
  if correctAnswers[i] == False:
    print(f"Your answer for {i+1} question was {yourAnswers[i]}, but the right answer is ", answers[i])
